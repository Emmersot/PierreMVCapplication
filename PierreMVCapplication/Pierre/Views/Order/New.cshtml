@{
  Layout = "_Layout";
}

<h1>Add a new order to @Model.Name</h1>

<form action="/venders/@Model.Id/orders" method="post">
  <input id="venderId" name="venderId" type="hidden" value="@Model.Id">
  <label for="orderName">Order Name</label>
  <input id="orderName" name="orderName" type="text">
  <button type='submit'>Add order</button>
</form>